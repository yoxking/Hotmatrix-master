    <sql id="selectSysRuserinfoVo">
        select id, user_no, login_name, password, user_cnname, user_enname, user_type, dept_no, orgz_no, post_no, suser_no, telephone, email, sex, avatar, salt, login_ip, login_date, check_state, branch_no, create_by, create_time, update_by, update_time, delete_flag, comments, app_code, version from sys_ruserinfo
    </sql>

    <select id="getAllRecords" resultMap="SysRuserinfoResult">
        <include refid="selectSysRuserinfoVo"/>
        where delete_flag='1' and app_code=#{appCode}
    </select>

    <select id="getRecordsByClassNo" resultMap="SysRuserinfoResult">
        <include refid="selectSysRuserinfoVo"/>
        where delete_flag='1' and app_code=#{appCode} and dept_no=#{classNo}
    </select>

    <select id="getRecordsByPaging" resultMap="SysRuserinfoResult">
        <include refid="selectSysRuserinfoVo"/>
        where delete_flag='1' and app_code=${appCode}
        <if test="model.condition != null  and model.condition != ''">and ${model.condition}</if>
        order by ${model.orderField} ${model.orderType} limit ${model.pageIndex},${model.pageSize}
    </select>

    <select id="getRecordByNo" resultMap="SysRuserinfoResult">
        <include refid="selectSysRuserinfoVo"/>
        where delete_flag='1' and app_code=#{appCode} and user_no = #{no}
