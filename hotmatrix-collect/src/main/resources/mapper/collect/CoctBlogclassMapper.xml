<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.benet.collect.mapper.CoctBlogclassMapper">

    <resultMap type="CoctBlogclass" id="CoctBlogclassResult">
        <result property="id" column="id"/>
        <result property="classNo" column="class_no"/>
        <result property="className" column="class_name"/>
        <result property="parentNo" column="parent_no"/>
        <result property="orderNo" column="order_no"/>
        <result property="checkState" column="check_state"/>
        <result property="createBy" column="create_by"/>
        <result property="createTime" column="create_time"/>
        <result property="updateBy" column="update_by"/>
        <result property="updateTime" column="update_time"/>
        <result property="deleteFlag" column="delete_flag"/>
        <result property="comments" column="comments"/>
        <result property="appCode" column="app_code"/>
        <result property="version" column="version"/>
    </resultMap>

    <sql id="selectCoctBlogclassVo">
        select id, class_no, class_name, parent_no, order_no, check_state, create_by, create_time, update_by, update_time, delete_flag, comments, app_code, version from coct_blogclass
    </sql>

    <select id="getAllRecords" resultMap="CoctBlogclassResult">
        <include refid="selectCoctBlogclassVo"/>
        where delete_flag='1' and app_code=#{appCode}
    </select>

    <select id="getRecordsByClassNo" resultMap="CoctBlogclassResult">
        <include refid="selectCoctBlogclassVo"/>
        where delete_flag='1' and app_code=#{appCode} and parent_no=#{classNo}
    </select>

    <select id="getRecordsByPaging" resultMap="CoctBlogclassResult">
        <include refid="selectCoctBlogclassVo"/>
        where delete_flag='1' and app_code=${appCode}
        <if test="model.condition != null  and model.condition != ''">and ${model.condition}</if>
        order by ${model.orderField} ${model.orderType} limit ${model.pageIndex},${model.pageSize}
    </select>

    <select id="getRecordByNo" resultMap="CoctBlogclassResult">
        <include refid="selectCoctBlogclassVo"/>
        where delete_flag='1' and app_code=#{appCode} and class_no = #{no}
    </select>

    <select id="getRecordNameByNo" resultType="String">
        select class_name from coct_blogclass
        where delete_flag='1' and app_code=#{appCode} and class_no = #{no}
    </select>

    <select id="getCountByCondition" resultType="Integer">
        select count(*) from coct_blogclass
        where delete_flag='1' and app_code=#{appCode}
        <if test="condition != null  and condition != ''">and ${condition}</if>
    </select>

    <insert id="AddNewRecord" parameterType="CoctBlogclass" useGeneratedKeys="true" keyProperty="id">
        insert into coct_blogclass (
        <if test="info.classNo != null  and info.classNo != ''">class_no,</if>
        <if test="info.className != null  and info.className != ''">class_name,</if>
        <if test="info.parentNo != null  and info.parentNo != ''">parent_no,</if>
        <if test="info.orderNo != null ">order_no,</if>
        <if test="info.checkState != null  and info.checkState != ''">check_state,</if>
        <if test="info.createBy != null  and info.createBy != ''">create_by,</if>
        <if test="info.createTime != null ">create_time,</if>
        <if test="info.updateBy != null  and info.updateBy != ''">update_by,</if>
        <if test="info.updateTime != null ">update_time,</if>
        <if test="info.deleteFlag != null  and info.deleteFlag != ''">delete_flag,</if>
        <if test="info.comments != null  and info.comments != ''">comments,</if>
        <if test="info.appCode != null  and info.appCode != ''">app_code,</if>
        <if test="info.version != null ">version</if>
        )values(
        <if test="info.classNo != null  and info.classNo != ''">#{info.classNo},</if>
        <if test="info.className != null  and info.className != ''">#{info.className},</if>
        <if test="info.parentNo != null  and info.parentNo != ''">#{info.parentNo},</if>
        <if test="info.orderNo != null ">#{info.orderNo},</if>
        <if test="info.checkState != null  and info.checkState != ''">#{info.checkState},</if>
        <if test="info.createBy != null  and info.createBy != ''">#{info.createBy},</if>
        <if test="info.createTime != null ">#{info.createTime},</if>
        <if test="info.updateBy != null  and info.updateBy != ''">#{info.updateBy},</if>
        <if test="info.updateTime != null ">#{info.updateTime},</if>
        <if test="info.deleteFlag != null  and info.deleteFlag != ''">#{info.deleteFlag},</if>
        <if test="info.comments != null  and info.comments != ''">#{info.comments},</if>
        <if test="info.appCode != null  and info.appCode != ''">#{info.appCode},</if>
        <if test="info.version != null ">#{info.version}</if>
        )
    </insert>

    <update id="UpdateRecord" parameterType="CoctBlogclass">
        update coct_blogclass
        <set>
            <if test="info.classNo != null  and info.classNo != ''">class_no = #{info.classNo},</if>
            <if test="info.className != null  and info.className != ''">class_name = #{info.className},</if>
            <if test="info.parentNo != null  and info.parentNo != ''">parent_no = #{info.parentNo},</if>
            <if test="info.orderNo != null ">order_no = #{info.orderNo},</if>
            <if test="info.checkState != null  and info.checkState != ''">check_state = #{info.checkState},</if>
            <if test="info.createBy != null  and info.createBy != ''">create_by = #{info.createBy},</if>
            <if test="info.createTime != null ">create_time = #{info.createTime},</if>
            <if test="info.updateBy != null  and info.updateBy != ''">update_by = #{info.updateBy},</if>
            <if test="info.updateTime != null ">update_time = #{info.updateTime},</if>
            <if test="info.deleteFlag != null  and info.deleteFlag != ''">delete_flag = #{info.deleteFlag},</if>
            <if test="info.comments != null  and info.comments != ''">comments = #{info.comments},</if>
            <if test="info.appCode != null  and info.appCode != ''">app_code = #{info.appCode},</if>
            <if test="info.version != null ">version = #{info.version}</if>
        </set>
        where delete_flag='1' and app_code=#{info.appCode} and version=#{info.version} and class_no =
        #{info.classNo}
    </update>

    <delete id="HardDeleteByNo">
        delete from coct_blogclass
        where delete_flag='1' and app_code=#{appCode} and class_no = #{no}
    </delete>

    <delete id="HardDeleteByNos">
        delete from coct_blogclass
        where delete_flag='1' and app_code=#{appCode} and class_no in
        <foreach item="no" collection="nos" open="(" separator="," close=")">
            #{no}
        </foreach>
    </delete>

    <delete id="HardDeleteByCondition">
        delete from coct_blogclass
        where delete_flag='1' and app_code=#{appCode}
        <if test="condition != null  and condition != ''">and ${condition}</if>
    </delete>

    <delete id="SoftDeleteByNo">
        update coct_blogclass set delete_flag='0'
        where delete_flag='1' and app_code=#{appCode} and class_no = #{no}
    </delete>

    <delete id="SoftDeleteByNos">
        update coct_blogclass set delete_flag='0'
        where delete_flag='1' and app_code=#{appCode} and class_no in
        <foreach item="no" collection="nos" open="(" separator="," close=")">
            #{no}
        </foreach>
    </delete>

    <delete id="SoftDeleteByCondition">
        update coct_blogclass set delete_flag='0'
        where delete_flag='1' and app_code=#{appCode}
        <if test="condition != null  and condition != ''">and ${condition}</if>
    </delete>

</mapper>